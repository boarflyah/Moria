<Window x:Class="MoriaDesktop.Views.Dictionary.Window.ElectricalCabinetWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoriaDesktop.Views.Dictionary.Window"
        xmlns:conv="clr-namespace:MoriaDesktop.Styles.Converters"
        mc:Ignorable="d"
        Title="ElectricalCabinetWindowView" Height="450" Width="800"
        Style="{StaticResource GlobalWindowStyle}"
        MouseLeftButtonDown="DragWindow"
        Loaded="WinowLoaed">
    
    <Window.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <Grid Grid.Column="0" Grid.Row="0" Margin="10"
       IsEnabled="{Binding Permission_Symbol.CanWrite}"
       Visibility="{Binding Permission_Symbol.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Symbol" Grid.Row="0" Margin="0,0,0,5"/>
        <TextBox Name="TextBox1" Text="{Binding Symbol, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Grid.Row="1"/>
    </Grid>
    </Grid>
</Window>
