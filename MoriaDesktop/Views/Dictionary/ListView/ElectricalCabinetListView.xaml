<Page x:Class="MoriaDesktop.Views.Dictionary.ListView.ElectricalCabinetListView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoriaDesktop.Views.Dictionary.ListView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ElectricalCabinetListView"
      Loaded="Page_Loaded"
      Style="{StaticResource GlobalListViewStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ColorDataGrid"
            Grid.Row="1"
                ItemsSource="{Binding ElectricalCabinets, Mode=OneWay}"
                MouseDoubleClick="ColorDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Symbol"
                    Binding="{Binding Symbol}"
                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
