<Page x:Class="MoriaDesktop.Views.Orders.OrderItemDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MoriaDesktop.Views.Orders"
      xmlns:controls="clr-namespace:MoriaDesktop.Styles.Controls"
      xmlns:converters="clr-namespace:MoriaDesktop.Styles.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Loaded="Page_Loaded">
    <Page.Resources>
        <converters:InvertBoolConverter x:Key="boolinv"/>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:BoolToVisibilityInvertedConverter x:Key="BoolToVisibilityInvertedConverter" />
    </Page.Resources>

    <Grid>
        <Border BorderBrush="Black" BorderThickness="0" Background="White" CornerRadius="0">
            <Grid >
                <!-- Główna struktura Page -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Pasek narzędzi -->
                    <RowDefinition Height="*"/>
                    <!-- Główna zawartość -->
                    <RowDefinition Height="Auto"/>
                    <!-- Stopka -->
                </Grid.RowDefinitions>

                <!-- Pasek narzędzi -->
                <Grid Grid.Row="0" Background="#EEE" Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Ikony -->
                        <ColumnDefinition Width="*"/>
                        <!-- Tytuł -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Informacje użytkownika -->
                    </Grid.ColumnDefinitions>

                    <!-- Ikony narzędzi -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="SaveButton" Width="30" Height="30" Margin="5" ToolTip="Zapisz"  Command="{Binding SaveCommand}">
                            <Image Source="/Images/save.png" Width="20" Height="20"/>
                        </Button>
                        <Button x:Name="ExitButton" Width="30" Height="30" Margin="5" ToolTip="Zamknij" Command="{Binding CloseCommand}">
                            <Image Source="/Images/Exit.png"/>
                        </Button>
                    </StackPanel>

                    <TextBlock Grid.Column="2" Text="{Binding Path=LastModified, StringFormat='Ostatnia modyfikacja: {0}'}"
                                           VerticalAlignment="Center" Margin="10"/>
                </Grid>

                <ScrollViewer Grid.Row="1">

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0"
                          Grid.Column="0"
                          Margin="10"
                          IsEnabled="{Binding Permission_Product.CanWrite}"
                          Visibility="{Binding Permission_Product.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Produkt" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <controls:LookupObjectControl x:Name="ProductLookupObjectControl"
                                                      Grid.Row="1"
                                                      LookupObject="{Binding Product, Mode=TwoWay}"
                                                      NameText="{Binding Product.Name, Mode=OneWay}"
                                                      OnLookupInvoked="ProductLookupObjectControl_OnLookupInvoked"/>
                        </Grid>

                        <Grid Grid.Row="0"
                          Grid.Column="1"
                          Margin="10"
                          IsEnabled="{Binding Permission_Component.CanWrite}"
                          Visibility="{Binding Permission_Component.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Komponent" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <controls:LookupObjectControl x:Name="ComponentLookupObjectControl"
                                                      Grid.Row="1"
                                                      LookupObject="{Binding Component, Mode=TwoWay}"
                                                      NameText="{Binding Component.Name, Mode=OneWay}"
                                                      OnLookupInvoked="ComponentLookupObjectControl_OnLookupInvoked"/>
                        </Grid>

                        <Grid Grid.Row="0"
                          Grid.Column="2"
                          Margin="10"
                          IsEnabled="{Binding Permission_Drive.CanWrite}"
                          Visibility="{Binding Permission_Drive.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Napęd" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <controls:LookupObjectControl x:Name="DriveLookupObjectControl"
                                                      Grid.Row="1"
                                                      LookupObject="{Binding Drive, Mode=TwoWay}"
                                                      NameText="{Binding Drive.Name, Mode=OneWay}"
                                                      OnLookupInvoked="DriveLookupObjectControl_OnLookupInvoked"/>
                        </Grid>

                        <Grid Grid.Row="0"
                          Grid.Column="3"
                          Margin="10"
                          IsEnabled="{Binding Permission_Quantity.CanWrite}"
                          Visibility="{Binding Permission_Quantity.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Ilość" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="QuantityTextBox" 
                                 Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                                 Grid.Row="1"
                                 PreviewTextInput="QuantityTextBox_PreviewTextInput"/>
                        </Grid>

                        <Grid Grid.Row="1"
                          Grid.Column="0"
                          Margin="10"
                          IsEnabled="{Binding Permission_Index.CanWrite}"
                          Visibility="{Binding Permission_Index.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Indeks" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="IndexTextBox" 
                                 Text="{Binding Index, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                                 Grid.Row="1"
                                 PreviewTextInput="QuantityTextBox_PreviewTextInput"/>
                        </Grid>

                        <Grid Grid.Row="1"
                          Grid.Column="1"
                          Grid.ColumnSpan="2"
                          Margin="10"
                          IsEnabled="{Binding Permission_Description.CanWrite}"
                          Visibility="{Binding Permission_Description.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Opis" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="DescriptionTextBox" 
                                 Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                                 Grid.Row="1"/>
                        </Grid>

                        <Grid Grid.Row="1"
                          Grid.Column="3"
                          Margin="10"
                          IsEnabled="{Binding Permission_Notes.CanWrite}"
                          Visibility="{Binding Permission_Notes.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Komentarz" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="NotesTextBox" 
                                 Text="{Binding Notes, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                                 Grid.Row="1"/>
                        </Grid>

                        <Grid Grid.Row="2"
                          Grid.Column="0"
                          Margin="10"
                          IsEnabled="{Binding Permission_MachineWeight.CanWrite}"
                          Visibility="{Binding Permission_MachineWeight.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Waga" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="MachineWeightTextBox" 
                                 Text="{Binding MachineWeight, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                                 Grid.Row="1"
                                 PreviewTextInput="QuantityTextBox_PreviewTextInput"/>
                        </Grid>

                        <Grid Grid.Row="2"
                          Grid.Column="1"
                          Margin="10"
                          IsEnabled="{Binding Permission_Warehouse.CanWrite}"
                          Visibility="{Binding Permission_Warehouse.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Magazyn" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <controls:LookupObjectControl x:Name="WarehouseLookupObjectControl"
                                                      Grid.Row="1"
                                                      LookupObject="{Binding Warehouse, Mode=TwoWay}"
                                                      NameText="{Binding Warehouse.Symbol, Mode=OneWay}"
                                                      OnLookupInvoked="WarehouseLookupObjectControl_OnLookupInvoked"/>
                        </Grid>

                        <Grid Grid.Row="2"
                          Grid.Column="2"
                          Margin="10"
                          IsEnabled="{Binding Permission_Designer.CanWrite}"
                          Visibility="{Binding Permission_Designer.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Projektant" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <controls:LookupObjectControl x:Name="DesignerLookupObjectControl"
                                                      Grid.Row="1"
                                                      LookupObject="{Binding Designer, Mode=TwoWay}"
                                                      NameText="{Binding Designer.Username, Mode=OneWay}"
                                                      OnLookupInvoked="DesignerLookupObjectControl_OnLookupInvoked"/>
                        </Grid>

                        <Grid Grid.Row="2"
                          Grid.Column="3"                          
                          Margin="10"
                          IsEnabled="{Binding Permission_TechnicalDrawingLink.CanWrite}"
                          Visibility="{Binding Permission_TechnicalDrawingLink.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Rysunek techniczny" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="TechnicalDrawingLinkTextBox" 
                                 Text="{Binding TechnicalDrawingLink, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource CustomTextBoxStyle}"
                                 Grid.Row="1" LostFocus="TechnicalDrawingLinkTextBox_LostFocus" MouseDoubleClick="TechnicalDrawingLinkTextBox_MouseDoubleClick"/>
                        </Grid>

                        <Grid Grid.Row="3"
                            Grid.Column="0"
                            Margin="10"
                            IsEnabled="{Binding Permission_MainColor.CanWrite}"
                            Visibility="{Binding Permission_MainColor.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Główny kolor" 
                      Grid.Row="0"
                      Margin="0,0,0,5"/>
                            <controls:LookupObjectControl x:Name="ColorLookupObjectControl"
                                             Grid.Row="1"
                                             LookupObject="{Binding MainColor, Mode=TwoWay}"
                                             NameText="{Binding MainColor.Name, Mode=OneWay}"
                                             OnLookupInvoked="ColorLookupObjectControl_OnLookupInvoked"/>
                        </Grid>

                        <Grid Grid.Row="3"
                        Grid.Column="1"
                        Margin="10"
                        IsEnabled="{Binding Permission_SecondColor.CanWrite}"
                        Visibility="{Binding Permission_SecondColor.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Detale kolor" 
                         Grid.Row="0"
                         Margin="0,0,0,5"/>
                            <controls:LookupObjectControl x:Name="SecondColorLookupObjectControl"
                          Grid.Row="1"
                          LookupObject="{Binding SecondColor, Mode=TwoWay}"
                          NameText="{Binding SecondColor.Name, Mode=OneWay}"
                          OnLookupInvoked="SecondColorLookupObjectControl_OnLookupInvoked"/>
                        </Grid>

                        <Grid Grid.Row="3"
                          Grid.Column="2"
                          Margin="10"
                          IsEnabled="{Binding Permission_Power.CanWrite}"
                          Visibility="{Binding Permission_Power.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Moc" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="PowerTextBox" 
                                 Text="{Binding Power, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" 
                                 Grid.Row="1"
                                 PreviewTextInput="TextBox_PreviewTextInput" 
                                 PreviewKeyDown="TextBox_PreviewKeyDown"/>
                        </Grid>

                        <Grid Grid.Row="3"
                          Grid.Column="3"
                          Margin="10"
                          IsEnabled="{Binding Permission_ProductionYear.CanWrite}"
                          Visibility="{Binding Permission_ProductionYear.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Rok produkcji" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="ProductionYearTextBox" 
                                 Text="{Binding ProductionYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Row="1"/>
                        </Grid>


                        <Grid Grid.Row="4"
                          Grid.Column="1"
                          Margin="10"
                          IsEnabled="{Binding Permission_ElectricalCabinet.CanWrite}"
                          Visibility="{Binding Permission_ElectricalCabinet.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Szafa elektryczna" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="ElectricalCabinetTextBox" 
                                 Text="{Binding ElectricalCabinet.Symbol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"
                                 Grid.Row="1"/>
                        </Grid>

                        <Grid Grid.Row="4"
                           Grid.Column="2"
                           Margin="10"
                           IsEnabled="{Binding Permission_Electrician.CanWrite}"
                           Visibility="{Binding Permission_Electrician.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Elektryk" 
                Grid.Row="0"
                Margin="0,0,0,5"/>
                            <TextBox Name="ElectricianTextBox" 
                  Text="{Binding Electrician.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"
                  Grid.Row="1"/>
                        </Grid>

                        <Grid Grid.Row="4"
                           Grid.Column="3"
                           Margin="10"
                           IsEnabled="{Binding Permission_Electrician.CanWrite}"
                           Visibility="{Binding Permission_Electrician.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Nr zlecenia" 
                Grid.Row="0"
                Margin="0,0,0,5"/>
                            <TextBox Name="SymbolTextBox" 
                  Text="{Binding Symbol, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"
                  Grid.Row="1"/>
                        </Grid>


                        <Grid Grid.Row="4"
                          Grid.Column="0"
                          Margin="10"
                          IsEnabled="{Binding Permission_SerialNumber.CanWrite}"
                          Visibility="{Binding Permission_SerialNumber.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Numer seryjny" 
                               Grid.Row="0"
                               Margin="0,0,0,5"/>
                            <TextBox Name="SerialNumberTextBox" 
                                 Text="{Binding SerialNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                 Grid.Row="1"/>
                        </Grid>

                        <Grid Grid.Column="0" Grid.ColumnSpan="4" Grid.Row="5" Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Kolumna 1 -->
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0"
                                    IsEnabled="{Binding Permission_TechnicalDrawingCompleted.CanWrite}"
                                    Visibility="{Binding Permission_TechnicalDrawingCompleted.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Dokumentacja" Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding TechnicalDrawingPlanned, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center"  IsEnabled="{Binding Permission_TechnicalDrawingPlanned.CanWrite}" FontWeight="ExtraLight"/>
                                <DatePicker SelectedDate="{Binding TechnicalDrawingStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center"  IsEnabled="{Binding Permission_TechnicalDrawingStarted.CanWrite}" FontWeight="Bold"/>
                                <DatePicker SelectedDate="{Binding TechnicalDrawingCompleted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraBlack"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0"
                                    IsEnabled="{Binding Permission_CuttingCompleted.CanWrite}"
                                    Visibility="{Binding Permission_CuttingCompleted.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Cięcie+gięcie" Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding CuttingPlanned, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center"  IsEnabled="{Binding Permission_CuttingPlanned.CanWrite}"  FontWeight="ExtraLight"/>
                                <DatePicker SelectedDate="{Binding CuttingStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center"  IsEnabled="{Binding Permission_CuttingStarted.CanWrite}" FontWeight="Bold"/>
                                <DatePicker SelectedDate="{Binding CuttingCompleted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraBlack"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0"
                                  IsEnabled="{Binding Permission_WeldingCompleted.CanWrite}"
                                  Visibility="{Binding Permission_WeldingCompleted.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Spawanie" Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding WeldingPlanned, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center"  IsEnabled="{Binding Permission_WeldingPlanned.CanWrite}" FontWeight="ExtraLight"/>
                                <DatePicker SelectedDate="{Binding WeldingStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center"  IsEnabled="{Binding Permission_WeldingStarted.CanWrite}" FontWeight="Bold"/>
                                <DatePicker SelectedDate="{Binding WeldingCompleted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraBlack"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="0"
                                    IsEnabled="{Binding Permission_MetalCliningCompleted.CanWrite}"
                                    Visibility="{Binding Permission_MetalCliningCompleted.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Śrutowanie" Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding MetalCliningPlanned, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center"  IsEnabled="{Binding Permission_MetalCliningPlanned.CanWrite}" FontWeight="ExtraLight"/>
                                <DatePicker SelectedDate="{Binding MetalCliningStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center"  IsEnabled="{Binding Permission_MetalCliningStarted.CanWrite}" FontWeight="Bold"/>
                                <DatePicker SelectedDate="{Binding MetalCliningCompleted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraBlack"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="0"
                                    IsEnabled="{Binding Permission_PaintingCompleted.CanWrite}"
                                    Visibility="{Binding Permission_PaintingCompleted.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Malowanie" Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding PaintingPlanned, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="{Binding Permission_PaintingPlanned.CanWrite}" FontWeight="ExtraLight"/>
                                <DatePicker SelectedDate="{Binding PaintingStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="{Binding Permission_PaintingStarted.CanWrite}" FontWeight="Bold"/>
                                <DatePicker SelectedDate="{Binding PaintingCompleted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraBlack"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="5" Grid.Column="0"
                                    IsEnabled="{Binding Permission_MachineAssembled.CanWrite}"
                                    Visibility="{Binding Permission_MachineAssembled.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Montaż" Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding PlannedMachineAssembled, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraLight" IsEnabled="{Binding Permission_PlannedMachineAssembled.CanWrite}"/>
                                <DatePicker SelectedDate="{Binding MachineAssembledStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="Bold" IsEnabled="{Binding Permission_MachineAssembledStarted.CanWrite}"/>
                                <DatePicker SelectedDate="{Binding MachineAssembled, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraBlack"/>
                            </StackPanel>

                            <!-- Kolumna 2 -->
                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1"
                                    IsEnabled="{Binding Permission_ElectricalDiagramCompleted.CanWrite}"
                                    Visibility="{Binding Permission_ElectricalDiagramCompleted.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Sch. elektr." Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding ElectricalDiagramPlanned, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="False" FontWeight="ExtraLight"/>
                                <DatePicker SelectedDate="{Binding ElectricalDiagramStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="False" FontWeight="Bold"/>
                                <DatePicker SelectedDate="{Binding ElectricalDiagramCompleted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="False" FontWeight="ExtraBlack"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1"
                                    IsEnabled="{Binding Permission_ControlCabinetWorkStartDate.CanWrite}"
                                    Visibility="{Binding Permission_ControlCabinetWorkStartDate.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Mont. rozdz." Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding ElectricaCabinetPlanned, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="False" FontWeight="ExtraLight"/>
                                <DatePicker SelectedDate="{Binding ElectricaCabinetStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="False" FontWeight="Bold"/>
                                <DatePicker SelectedDate="{Binding ElectricaCabinetCompleted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" IsEnabled="False" FontWeight="ExtraBlack"/>
                            </StackPanel>

                            <!--            <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1"
                                    IsEnabled="{Binding Permission_ElectricaCabinetCompleted.CanWrite}"
                                    Visibility="{Binding Permission_ElectricaCabinetCompleted.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Szafa elektryczna gotowa" Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding ElectricaCabinetCompleted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" IsEnabled="False" VerticalAlignment="Center" FontWeight="ExtraBlack"/>
                            </StackPanel> -->

                            <!-- Kolumna 3 -->

                            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2"
                                    IsEnabled="{Binding Permission_PlannedMachineAssembled.CanWrite}"
                                    Visibility="{Binding Permission_PlannedMachineAssembled.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Zestawienie" Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding PlannedMachineAssembledAll, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraLight"/>
                                <DatePicker SelectedDate="{Binding MachineAssembledAllStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="Bold"/>
                                <DatePicker SelectedDate="{Binding MachineAssembledAllCompleted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraBlack"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2"
                                    IsEnabled="{Binding Permission_MachineWiredAndTested.CanWrite}"
                                    Visibility="{Binding Permission_MachineWiredAndTested.CanRead, Converter={StaticResource BoolToVisibilityConverter}}">
                                <Label Content="Kablowanie" Margin="0,0,10,0"/>
                                <DatePicker SelectedDate="{Binding PlannedMachineWiredAndTested, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraLight" IsEnabled="{Binding Permission_PlannedMachineWiredAndTested.CanWrite}"/>
                                <DatePicker SelectedDate="{Binding MachineWiredAndTestedStarted, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" IsEnabled="False" VerticalAlignment="Center" FontWeight="Bold"/>
