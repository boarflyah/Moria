            <DatePicker SelectedDate="{Binding MachineReleased, StringFormat='{}{0:dd.MM.yyyy}', Mode=TwoWay}" VerticalAlignment="Center" FontWeight="ExtraBlack" IsEnabled="{Binding Permission_MachineReleased.CanWrite}"/>
        </StackPanel>

