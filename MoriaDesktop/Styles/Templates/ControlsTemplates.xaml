<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:MoriaDesktop.Styles.Controls"
                    x:Class="MoriaDesktop.Styles.Templates.ControlsTemplates">

    <!--#region buttons-->

    <Style TargetType="Button">
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Foreground" Value="{StaticResource DefaultForeground}"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
        <!--<Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="#D4F6FF" />
                <Setter Property="BorderBrush" Value="#37AFE1" />
            </Trigger>
        </Style.Triggers>-->
    </Style>
    <Style x:Key="MainWindowTopRibbonButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Width" Value="30"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver"  Value="True">
                <Setter Property="Background" Value="Yellow"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="Button" x:Key="CalendarHeaderButtonStyle">
        <Setter Property="FontSize" Value="5"/>
    </Style>

    <!--#endregion-->

    <!--#region textblocks-->

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource DefaultForeground}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
    </Style>

    <!--#endregion-->

    <!--#region labels-->

    <Style TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource DefaultForeground}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="FontWeight" Value="Light"/>
    </Style>

    <!--#endregion-->
    
    <!--#region checkboxes-->

    <Style TargetType="CheckBox">
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLocked, Mode=OneWay}" Value="True">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <!--#endregion-->

    <!--#region textboxes-->

    <Style TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource DefaultForeground}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <EventSetter Event="GotFocus" Handler="TextBox_GotFocus"/>
        <EventSetter Event="PreviewMouseDown" Handler="TextBox_PreviewMouseDown"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLocked, Mode=OneWay}" Value="True">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
        <Setter Property="Foreground" Value="{StaticResource DefaultForeground}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLocked, Mode=OneWay}" Value="True">
                <Setter Property="IsReadOnly" Value="True" />

            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <Style TargetType="PasswordBox">
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLocked, Mode=OneWay}" Value="True">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border CornerRadius="4" 
                            Height="25"
                                Background="White" 
                                BorderBrush="SlateGray" 
                                BorderThickness="0.7">
                        <ScrollViewer Margin="2" 
                                          x:Name="PART_ContentHost" 
                                          Focusable="False" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="PasswordBox" x:Key="NoLockPasswordBoxStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border CornerRadius="4" 
                            Height="25"
                                Background="White" 
                                BorderBrush="SlateGray" 
                                BorderThickness="0.7">
                        <ScrollViewer Margin="2"
                                      x:Name="PART_ContentHost" 
                                      Focusable="False" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="TextBox" x:Key="NoLockTextBoxStyle">
        <Setter Property="Foreground" Value="{StaticResource DefaultForeground}"/>
        <Setter Property="FontSize" Value="{StaticResource DefaultFontSize}"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5"/>
            </Style>
        </Style.Resources>
    </Style>

    <!--#endregion-->
    
    <!--#region custom controls-->

    <Style TargetType="controls:LookupObjectControl">
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsLocked, Mode=OneWay}" Value="True">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    
    <!--#endregion-->

</ResourceDictionary>